@model IList<EditalMongoListViewModel>

@{
    ViewData["Title"] = "Publicações";
}

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item active">Home</li>
        <li class="breadcrumb-item active">Publicações</li>
    </ol>
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="form-row">
                    <div class="form-group col-sm-2">
                        <label>UF:</label>
                        <select class="form-control">
                            <option value="ES">ES</option>
                        </select>
                    </div>
                    <div class="form-group col-sm-4">
                        <label>Município:</label>
                        <select class="form-control">
                            <option value="">Selecione</option>
                            <option value="JERÔNIMO MONTEIRO">JERÔNIMO MONTEIRO</option>
                            <option value="PIÚMA">PIÚMA</option>
                        </select>
                    </div>
                    <div class="form-group col-sm-2 offset-4">
                        <button type="submit" class="btn btn-block btn-primary active" style="margin-top: 28px;">Pesquisar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card card-accent-info">
            <div class="card-header">
                <i class="fa fa-align-justify"></i> Publicações
            </div>
            <div class="card-body">
                <table class="table table-responsive-sm table-striped table-sm tbPublicacoes">
                    <thead>
                        <tr>
                            <th>Nº do Processo</th>
                            <th>UF</th>
                            <th>Município</th>
                            <th>Órgão</th>
                            <th>Data de publicação</th>
                            <th width="10%" data-orderable="false"></th>
                            <th width="10%" data-orderable="false"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var editalMongo in Model)
                            {
                                <tr>
                                    <td>@editalMongo.NumeroProcesso</td>
                                    <td>ES</td>
                                    <td>Vitória</td>
                                    <td>Secretaria de Justiça</td>
                                    <td>@editalMongo.DataPublicacao</td>
                                    <td>
                                        <button type="button" class="btn btn-pill btn-block btn-warning" aria-pressed="true"><span class="icon-note"></span> Editar</button>
                                    </td>
                                </tr>
                            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!--/.col-->
</div>
<!--/.row-->

@section Scripts{
    <script type="text/javascript">
        $('.tbPublicacoes').DataTable({
            "order": [[5, "asc"]]
        });

        $('.iconFavorit').on('click', function () {
            var object = $(this).val();

            if (object == 'true') {
                $(this).removeClass('fa fa-star').addClass('fa fa-star-o').removeAttr('style');
                $(this).val(false);
            }
            else {
                $(this).removeClass('fa fa-star-o').addClass('fa fa-star').css('color', '#dcbd15');
                $(this).val(true);
            }
        });
    </script>
}